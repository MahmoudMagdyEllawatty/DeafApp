<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_marginTop="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_margin="5dp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:gravity="end"
        android:padding="10dp"
        android:id="@+id/my_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:text="Mahmoud Ellawatty"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/message"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message"
            android:id="@+id/translate"
            app:layout_constraintVertical_bias="0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg"
            android:padding="10dp"
            android:src="@drawable/ic_translate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/shape_bg_incoming_bubble"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:gravity="start"
        android:padding="10dp"
        android:id="@+id/his_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Mahmoud Ellawatty"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_alignParentStart="true"
            android:layout_below="@+id/message1"
            android:layout_marginStart="25dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/message1"
            android:id="@+id/translate1"
            app:layout_constraintVertical_bias="0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg_2"
            android:padding="10dp"
            android:src="@drawable/ic_translate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </RelativeLayout>


</LinearLayout>